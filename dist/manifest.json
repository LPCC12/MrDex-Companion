{
  "manifest_version": 3,
  "name": "Mr. Pokédex Companion",
  "version": "0.11",
  "description": "Video Database for your Catch' em All! Seamlessly integrating with compatible webpages, it provides easy access to a vast collection of video guides from the YouTube channel Mr. Pokedex.",
  "icons": {
    "16": "assets/img/mdex-companion.png",
    "48": "assets/img/mdex-companion.png",
    "128": "assets/img/mdex-companion.png"
  },
  "action": {
    "default_icon": "assets/img/mdex-companion.png",
    "default_title": "Mr. Pokédex Companion",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "alarms", "notifications", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/config/cfg.json",
        "assets/img/mdex-default.png",
        "assets/img/mdex-clickme.png",
        "assets/img/gameboy.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.serebii.net/*",
        "https://bulbapedia.bulbagarden.net/wiki/*"
      ],
      "css": ["script/contentScript.css"],
      "js": ["script/contentScript.js"]
    }
  ]
}
