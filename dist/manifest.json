{
  "manifest_version": 3,
  "name": "Mr. Pokédex Companion",
  "version": "0.5",
  "description": "Video Database for your Catch' em All!",
  "icons": {
    "16": "assets/img/mdex-default.png",
    "48": "assets/img/mdex-default.png",
    "128": "assets/img/mdex-default.png"
  },
  "action": {
    "default_icon": "assets/img/mdex-default.png",
    "default_title": "Mr. Pokédex Companion",
    "default_popup": "popup/default.html"
  },
  "permissions": ["storage", "alarms", "notifications", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/db/g1/main.json",
        "assets/db/g1/appendix.json",
        "assets/config/cfg.json",
        "assets/img/mdex-default.png",
        "assets/img/mdex-yt.png",
        "assets/db/g1/img/ball.png",
        "assets/db/g1/img/biped.png",
        "assets/db/g1/img/bird.png",
        "assets/db/g1/img/fairy.png",
        "assets/db/g1/img/fossil.png",
        "assets/db/g1/img/insect.png",
        "assets/db/g1/img/pikachu.png",
        "assets/db/g1/img/plant.png",
        "assets/db/g1/img/quadruped.png",
        "assets/db/g1/img/snake.png",
        "assets/db/g1/img/water.png",
        "assets/img/gameboy.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.serebii.net/*",
        "https://bulbapedia.bulbagarden.net/wiki/*"
      ],
      "css": ["script/contentScript.css"],
      "js": ["script/contentScript.js"]
    }
  ]
}
